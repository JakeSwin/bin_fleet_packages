<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>
  <arg name="failover_mode" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share bin_fleet)/launch/include/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="config_file" value="$(find-pkg-share bin_fleet_maps)/inb_3235/inb_3235.building.yaml"/>
    <arg name="use_rmf_panel" value="false"/>
  </include>

  <include file="$(find-pkg-share bin_fleet)/launch/ff_server.launch.xml">
    <arg name="translation_x" value="-5.585"/>
    <arg name="translation_y" value="16.417"/>
    <!-- <arg name="translation_y" value="0.0"/> -->
    <!-- <arg name="translation_x" value="5.861"/>
    <arg name="translation_y" value="-18.417"/> -->
    <arg name="rotation" value="0.0"/>
    <arg name="scale" value="1.0"/>
  </include>

  <!-- TinyRobot fleet adapter and robot state aggregator needed for the TinyRobot slotcar_plugin -->
  <group>
    <let name="fleet_name" value="turtlebot2"/>
    <include file="$(find-pkg-share bin_fleet)/launch/include/turtlebot2_adapter.launch.xml">
      <arg name="fleet_name" value="$(var fleet_name)"/>
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share bin_fleet_maps)/maps/inb_3235/nav_graphs/0.yaml" />
    </include>
    <include file="$(find-pkg-share rmf_fleet_adapter)/robot_state_aggregator.launch.xml">
      <arg name="robot_prefix" value="robot"/>
      <arg name="fleet_name" value="$(var fleet_name)"/>
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="failover_mode" value="$(var failover_mode)"/>
    </include>
  </group>

</launch>
